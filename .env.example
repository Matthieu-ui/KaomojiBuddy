# Twitter API Credentials
# Required when MOCK_MODE=false
# Get these from the Twitter Developer Portal (https://developer.twitter.com/en/portal/dashboard)
API_KEY=your_twitter_api_key_here
API_SECRET_KEY=your_twitter_api_secret_here
ACCESS_TOKEN=your_twitter_access_token_here
ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here

# Bot Configuration
# Set to 'debug' for detailed logs, 'info' for normal operation
LOG_LEVEL=info

# Mock Mode
# Set to 'true' for development without Twitter API access
# Set to 'false' when deploying with real Twitter API credentials
MOCK_MODE=true